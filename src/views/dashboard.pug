extends layout

block content
  .container-fluid
    .row
      .col-md-3
        nav.sidebar.sidebar-sticky.bg-light
          ul.nav.flex-column
            li.nav-item
              a.nav-link.active(href="#") Dashboard
            li.nav-item
              a.nav-link(href="#") Orders
            li.nav-item
              a.nav-link(href="#") Products
            li.nav-item
              a.nav-link(href="#") Customers
      .col-md-9
        .d-flex.justify-content-between.flex-wrap.flex-md-nowrap.align-items-center.pt-3.pb-2.mb-3.border-bottom
          h1.dashboard-heading Dashboard
          .btn-toolbar.mb-2.mb-md-0
            button.btn.btn-sm.btn-outline-secondary.dropdown-toggle(type="button", data-bs-toggle="dropdown", aria-expanded="false")
              i.fas.fa-cog
            ul.dropdown-menu.dropdown-menu-end
              li: a.dropdown-item(href="#") Settings
              li: a.dropdown-item(href="/auth/logout") Logout
        .row
          .col-md-4
            .card.mb-4.box-shadow
              .card-header
                h4.my-0.font-weight-normal Product Sales
              .card-body
                canvas#productSalesChart(width="100%", height="250")
              ul.list-unstyled.mt-3.mb-4
                li.text-muted: small
                  i.fa.fa-check.mr-1
                  Current Month Sales: $10,000
                li.text-muted: small
                  i.fa.fa-check.mr-1
                  Total Sales: $100,000
          .col-md-4
            .card.mb-4.box-shadow
              .card-header
                h4.my-0.font-weight-normal Top Products
              .card-body
                table.table.table-striped
                  thead
                    tr
                      th Product
                      th Sales
                  tbody
                    tr
                      td Product 1
                      td 100
                    tr
                      td Product 2
                      td 75
                    tr
                      td Product 3
                      td 50
                    tr
                      td Product 4
                      td 25
          .col-md-4
            .card.mb-4.box-shadow
              .card-header
                h4.my-0.font-weight-normal Customers
              .card-body
                ul.list-unstyled
                  li: a(href="#") Customer 1
                  li: a(href="#") Customer 2
                  li: a(href="#") Customer 3
                  li: a(href="#") Customer 4
